# Production Environment Configuration
# Load this file with: source configs/.env.production

# Service Configuration
GATEWAY_PORT=8080
SIM_PORT=8081
GATEWAY_BIND_ADDR=0.0.0.0:8080
SIM_BIND_ADDR=0.0.0.0:8081

# Database Configuration (use environment-specific values)
DATABASE_URL=${DATABASE_URL:-postgres://gameuser:${DB_PASSWORD}@postgres:5432/gamedb?sslmode=require}
REDIS_URL=${REDIS_URL:-redis://redis:6379/0}

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Game Configuration
SPATIAL_CELL_SIZE=1000
TICK_RATE=30
MAX_ENTITIES=50000
MAX_CONNECTIONS=10000
HEARTBEAT_INTERVAL=30s

# Security Configuration
JWT_SECRET=${JWT_SECRET}  # Must be provided externally. Minimum 32 characters, use a strong random value (e.g., base64 or hex). Example:
# JWT_SECRET=3f8b2e1c9d4a7e6f5b1c0d8e2a4f6b7c3e9d1a2b4c6e8f0a1b3d5c7e9f1a3b5
JWT_EXPIRY=1h
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Production Settings
HOT_RELOAD=false
DEBUG_ENDPOINTS=false
PROFILING_ENABLED=false
CORS_ORIGIN=${ALLOWED_ORIGINS:-https://yourgame.com}

# Performance Tuning
GOMAXPROCS=${GOMAXPROCS:-0}
GOGC=${GOGC:-100}
GODEBUG=${GODEBUG:-}